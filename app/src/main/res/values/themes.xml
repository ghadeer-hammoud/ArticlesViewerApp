<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ArticlesViewerApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/open_sans_font</item>
    </style>

    <style name="Theme.ArticlesViewerApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ArticlesViewerApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ArticlesViewerApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Pill.Teal.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:background">@drawable/background_teal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Pill.Purple.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:background">@drawable/background_purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Pill.Green.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:background">@drawable/background_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
    </style>


</resources>