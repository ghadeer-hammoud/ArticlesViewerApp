<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/ivThumbnail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="thumbnail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@android:drawable/ic_menu_gallery"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Supporters of the Democratic candidate Jon Ossoff after his parent to go in the future back to him imagine."
        android:textColor="@color/purple_500"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@+id/ivArrowRight"
        app:layout_constraintStart_toEndOf="@+id/ivThumbnail"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvByline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="By DAVID"
        android:textColor="@color/dark_gray"
        android:textSize="14sp"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@+id/ivThumbnail"
        app:layout_constraintEnd_toStartOf="@+id/ivArrowRight"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <TextView
        android:id="@+id/tvPublishedDate"
        style="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="2017-06-23"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:drawableLeft="@drawable/round_date_range_white_18"
        android:drawableTint="@color/light_gray"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@+id/ivArrowRight"
        app:layout_constraintTop_toBottomOf="@+id/tvByline"
        />


    <ImageView
        android:id="@+id/ivArrowRight"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="Arrow Right"
        android:src="@drawable/round_arrow_forward_ios_white_48"
        app:tint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>